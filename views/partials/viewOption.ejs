<div class="view-options">
    <div class="switch-container">
      <button id="rowViewSwitch" class="switch-button active" aria-label="Switch to row view">
        <i class="fas fa-list"></i>
        <span class="switch-label">Row</span>
        <i class="fas fa-check check-icon"></i>
      </button>
      <button id="boxViewSwitch" class="switch-button" aria-label="Switch to box view">
        <i class="fas fa-th-large"></i>
        <span class="switch-label">Box</span>
        <i class="fas fa-check check-icon"></i>
      </button>
    </div>
  </div>